@model Proovedor
@{
    ViewData["Title"] = "Crear Proovedor";
}
    <br />
<h1>@ViewData["Title"]</h1>
    <br />
<form method="post">
    <div class="mb-3">
        <label>Tipo:</label>
        <input asp-for="nombreProovedor" class="form-control" placeholder="Ingrese el tipo">
    </div>
    <div class="mb-3">
        <label>Duración:</label>
        <input asp-for="duracionContrato" class="form-control" placeholder="Ingrese la duración">
    </div>
    <div class="mb-3">
        <label>Precio:</label>
        <input asp-for="precioImportacion" class="form-control" placeholder="Ingrese el precio">
    </div>
    
    <div class="row col-6">
        <div class="col-6 col-md-6">
            <button type="submit" class="btn btn-primary">Crear</button>
        </div>
        <div class="col-6 col-md-6">
            <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
        </div>
    </div>
</form>

<p>Esta es la vista para crear proovedores</p>