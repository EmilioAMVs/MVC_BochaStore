@model Usuario

@{
    Layout = null;
    ViewData["Title"] = "Crear Cuenta";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;500&display=swap" rel="stylesheet">
</head>

<body class="body-styles-SignUp">

    <div class="background-rgba ">
        <div class="d-flex justify-content-center align-items-center mt-3 gap-2">
            <div class="medium-text">Bocha Store</div> <i class="fa-regular fa-registered"></i>
        </div>
        <div class="login-form">

            <h1 class="mb-5 text-center medium-text">@ViewData["Title"]</h1>
            <form method="POST" class="mb-4">

                <div class="mb-4">
                    <label class="mb-2">Usuario:</label>
                    <input asp-for="username" type="text" class="form-control" placeholder="Ingresa el usuario">
                </div>
                <div class="mb-4">
                    <div class="d-flex flex-nowrap justify-content-between mb-2">
                         <label>Contraseña:</label>
                    </div>
                    <input asp-for="password" type="password" class="form-control" placeholder="Ingresa la contraseña">
                </div>

                <button type="submit" class="btn btn-outline-light w-100">Crear Cuenta</button>

            </form>
            <button onclick="location.href='@Url.Action("SignIn", "Usuario")'" class="btn btn-outline-light w-100">Volver</button>
            <div class="d-flex justify-content-center align-items-center mt-3 gap-2">   
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/acf261d014.js" crossorigin="anonymous"></script>
</body>
</html>